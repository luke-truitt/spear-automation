@model SpearAutomation.Models.Spear.Models.DashboardModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center">Spear Dashboard -- USMC: GCSS/MOL -> TCPT</h1>
<!--<h2>Last Updated Data: @Model.LastUpdate.ToString()</h2>-->
<form asp-action="ClearLog">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input #myLink type="submit" value="Clear Log" class="btn btn-default" />
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Event Id
            </th>
            <th>
                Log Level
            </th>
            <th>
                Report
            </th>
            <th>
                Date and Time
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.logs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LogLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedTime)
                </td>
            </tr>
        }
    </tbody>
</table>
